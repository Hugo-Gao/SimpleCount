<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/wrapper_text_edit"
                                    android:layout_width="300dp"
                                    android:layout_height="300dp"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@color/mainColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="@color/textColor"
            android:text="旅行日志"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/des_bill_edit"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:textColor="@color/textColor"
            android:layout_gravity="center_horizontal"
            android:hint="请描述"
            android:textColorHint="#BDBDBD"
            />


        <EditText
            android:id="@+id/money_num_edit"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:textColor="@color/textColor"
            android:layout_gravity="center_horizontal"
            android:hint="请输入金额"
            android:textColorHint="#BDBDBD"
            android:inputType="numberDecimal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            >

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/name_spinner"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                app:ms_text_color="@color/textColor"
                app:ms_background_color="@color/mainColor"
                ></com.jaredrummler.materialspinner.MaterialSpinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/textColor"
                android:text="支出"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/material_button"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/dui"
        />

</android.support.v7.widget.CardView>
