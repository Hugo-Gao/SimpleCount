<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#ffffff">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/add_people_button"
            android:background="@mipmap/add_people1"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:text="添加朋友"
            android:id="@+id/textView1"
            android:paddingTop="110dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:id="@+id/settlemoney"
            android:background="@mipmap/count"
            android:layout_toEndOf="@+id/add_people_button"
            android:layout_marginStart="55dp"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="170dp"
            android:paddingTop="110dp"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:text="结算"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>


        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="140dp"
            android:id="@+id/returnLog"
            android:background="@mipmap/returnlog"
            android:layout_toEndOf="@+id/add_people_button"
            android:layout_marginStart="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_toEndOf="@+id/add_people_button"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:text="退出登录"
            android:layout_marginStart="-5dp"
            />
    </RelativeLayout>
</LinearLayout>